<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_currency_form" model="ir.ui.view">
        <field name="name">currency.form</field>
        <field name="model">currency</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_currency_tree" model="ir.ui.view">
        <field name="name">currency.tree</field>
        <field name="model">currency</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_currency" model="ir.actions.act_window">
        <field name="name">Salutation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">currency</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>