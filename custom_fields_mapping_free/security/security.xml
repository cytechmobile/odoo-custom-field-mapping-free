<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="base.module_category_extra_tools" model="ir.module.category">
        <field name="name">Custom Fields Mapping Role</field>
        <field name="description">Helps you manage your custom fields mapping.</field>
        <field name="sequence">9</field>
    </record>

    <record id="group_custom_fields_mapping_user" model="res.groups">
        <field name="name">Viewer</field>
        <field name="category_id" ref="base.module_category_extra_tools"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">The users will be able only to view</field>
    </record>

    <record id="group_custom_fields_mapping_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="comment">The user will have access to add custom fields.</field>
        <field name="category_id" ref="base.module_category_extra_tools"/>
        <field name="implied_ids" eval="[(4, ref('group_custom_fields_mapping_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('group_custom_fields_mapping_user'))]"/>
    </record>

</odoo>